{
	"name": "@neovici/cosmoz-bottom-bar",
	"version": "8.1.0",
	"description": "A responsive bottom-bar that can house buttons/actions and a menu for the buttons that won't fit the available width.",
	"keywords": [
		"polymer",
		"web-components"
	],
	"homepage": "https://github.com/neovici/cosmoz-bottom-bar#readme",
	"bugs": {
		"url": "https://github.com/neovici/cosmoz-bottom-bar/issues"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/neovici/cosmoz-bottom-bar.git"
	},
	"license": "Apache-2.0",
	"author": "Neovici Development",
	"main": "dist/index.js",
	"exports": {
		".": "./dist/index.js"
	},
	"files": [
		"dist/",
		"types"
	],
	"scripts": {
		"lint": "tsc && eslint --cache .",
		"build": "tsc -p tsconfig.build.json",
		"start": "npm run storybook:start",
		"test": "wtr --coverage",
		"test:watch": "wtr --watch",
		"prepare": "husky",
		"storybook:start": "storybook dev -p 8000",
		"storybook:build": "storybook build",
		"storybook:deploy": "storybook-to-ghpages",
		"storybook:preview": "npm run storybook:build && http-server -d ./storybook-static/"
	},
	"release": {
		"plugins": [
			"@semantic-release/commit-analyzer",
			"@semantic-release/release-notes-generator",
			"@semantic-release/changelog",
			"@semantic-release/github",
			"@semantic-release/npm",
			"@semantic-release/git"
		],
		"branch": "master"
	},
	"publishConfig": {
		"access": "public"
	},
	"commitlint": {
		"extends": [
			"@commitlint/config-conventional"
		]
	},
	"dependencies": {
		"@neovici/cosmoz-collapse": "^1.5.0",
		"@neovici/cosmoz-dropdown": "^4.0.0 || ^5.0.0",
		"@neovici/cosmoz-utils": "^6.13.1",
		"@pionjs/pion": "^2.5.2",
		"@polymer/polymer": "^3.3.0",
		"lit-html": "^2.0.0 || ^3.0.0"
	},
	"devDependencies": {
		"@commitlint/cli": "^19.0.0",
		"@commitlint/config-conventional": "^19.0.0",
		"@neovici/cfg": "^1.13.0",
		"@open-wc/testing": "^4.0.0",
		"@polymer/iron-icon": "^3.0.1",
		"@polymer/iron-icons": "^3.0.1",
		"@polymer/paper-button": "^3.0.0",
		"@polymer/paper-toggle-button": "^3.0.0",
		"@semantic-release/changelog": "^6.0.0",
		"@semantic-release/git": "^10.0.0",
		"@storybook/addon-essentials": "^7.0.0",
		"@storybook/addon-links": "^7.0.0",
		"@storybook/builder-vite": "7.6.17",
		"@storybook/storybook-deployer": "^2.8.5",
		"@storybook/web-components": "7.6.17",
		"@types/mocha": "^10.0.6",
		"@web/storybook-builder": "^0.1.9",
		"@web/storybook-framework-web-components": "^0.1.1",
		"@webcomponents/webcomponentsjs": "^2.5.0",
		"esbuild": "^0.24.0",
		"eslint": "^8.57.1",
		"http-server": "^14.1.1",
		"husky": "^9.1.1",
		"rollup-plugin-esbuild": "^6.1.1",
		"semantic-release": "^24.0.0",
		"sinon": "^19.0.0",
		"storybook": "^7.6.17",
		"typescript": "^5.0.0"
	}
}
