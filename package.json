{
	"name": "@neovici/cosmoz-bottom-bar",
	"version": "7.1.2",
	"description": "A responsive bottom-bar that can house buttons/actions and a menu for the buttons that won't fit the available width.",
	"keywords": [
		"polymer",
		"web-components"
	],
	"homepage": "https://github.com/neovici/cosmoz-bottom-bar#readme",
	"bugs": {
		"url": "https://github.com/neovici/cosmoz-bottom-bar/issues"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/neovici/cosmoz-bottom-bar.git"
	},
	"license": "Apache-2.0",
	"author": "Neovici Development",
	"main": "cosmoz-bottom-bar.js",
	"directories": {
		"test": "test"
	},
	"files": [
		"cosmoz-*.js",
		"lib/**/*.js"
	],
	"scripts": {
		"lint": "eslint --cache --ext .js .",
		"start": "wds",
		"test": "wtr --coverage",
		"test:watch": "wtr --watch",
		"prepare": "husky install"
	},
	"release": {
		"plugins": [
			"@semantic-release/commit-analyzer",
			"@semantic-release/release-notes-generator",
			"@semantic-release/changelog",
			"@semantic-release/github",
			"@semantic-release/npm",
			"@semantic-release/git"
		],
		"branch": "master"
	},
	"publishConfig": {
		"access": "public"
	},
	"commitlint": {
		"extends": [
			"@commitlint/config-conventional"
		]
	},
	"dependencies": {
		"@neovici/cosmoz-dropdown": "^4.0.0",
		"@polymer/polymer": "^3.3.0",
		"lit-html": "^2.0.0 || ^3.0.0"
	},
	"devDependencies": {
		"@commitlint/cli": "^19.0.0",
		"@commitlint/config-conventional": "^19.0.0",
		"@neovici/cfg": "^1.13.0",
		"@open-wc/testing": "^4.0.0",
		"@polymer/iron-icon": "^3.0.1",
		"@polymer/iron-icons": "^3.0.1",
		"@polymer/paper-button": "^3.0.0",
		"@polymer/paper-toggle-button": "^3.0.0",
		"@semantic-release/changelog": "^6.0.0",
		"@semantic-release/git": "^10.0.0",
		"@webcomponents/webcomponentsjs": "^2.5.0",
		"husky": "^8.0.0",
		"semantic-release": "^23.0.0",
		"sinon": "^17.0.0"
	}
}
